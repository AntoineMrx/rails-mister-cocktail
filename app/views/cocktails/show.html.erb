<p id="notice"><%= notice %></p>

  <div class="wrapper">
    <div>
    <h2 class="title"><%= @cocktail.name %></h2>
    </div>
    <div class="recipe">
      <%= link_to "#{image_tag("add.png", size: "22x22")}".html_safe, new_cocktail_dose_path(@cocktail) %> |
      <%= link_to "#{image_tag("edit.ico", size: "22x22")}".html_safe, edit_cocktail_path(@cocktail) %> |
      <%= link_to "#{image_tag("back.png", size: "22x22")}".html_safe, cocktails_path %>
    </div>
  </div>

  <div class="wrapper">
    <div>
  <% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 400, height: 600, crop: :fill %>
<% end %>
    </div>
    <div class="recipe">
      <strong>Recipe:</strong>
  <ol><% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %></li>
    <% end %>
  </ol>
    </div>
</div>
